@model IEnumerable<Security_Module.Models.MenuList>
@{
    ViewBag.Title = "MenuPermission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />



<div class="panel panel-success" style="width:500px; margin-left:200px;">
    <div class="panel-heading text-center">Menu Permission</div>
    <div class="panel-body">
        <table style="width:500px;">
            @using (Html.BeginForm("SaveManagePermission", "Role", FormMethod.Post))
            {
                <tr>
                    <td>@Html.Hidden("Id")</td>
                </tr>
                <tr>
                    <td>Role Name</td>
                    <td colspan="3">@Html.TextBox("Role", null, new { @readonly = "readonly", style = "width:400px;" })</td>

                </tr>
                <tr>
                    <td colspan="3"><br /><br /><br /></td>
                </tr>
                <tr>
                    <th></th>
                    <th>Menu</th>
                    <th>IsVisible</th>

                </tr>

                foreach (var item in Model)
                {
                    <tr>
                        <td><input type="hidden" value="@item.MenuId" name="MenuId" /></td>
                        <td>@Html.DisplayFor(model => item.MenuName)</td>
                        @*<td><input id="IsVisible" type="checkbox" name="IsVisible" /></td>*@
                        <td> @Html.CheckBox("IsVisible") </td>

                    </tr>
                }
                <tr>
                    <td colspan="3"><br /><br /><br /></td>
                </tr>
                <tr>
                    <td colspan="3" class="text-center"><input type="submit" value="Save Permission" class="btn btn-sm btn-success" /></td>
                </tr>


            }

        </table>

    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>