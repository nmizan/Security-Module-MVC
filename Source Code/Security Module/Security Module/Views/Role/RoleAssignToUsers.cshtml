@model IEnumerable<Security_Module.Models.UserRegistration>
@{
    ViewBag.Title = "MenuPermission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />



<div class="panel panel-success" style="width:500px; margin-left:200px;">
    <div class="panel-heading text-center">Role Assign To Users</div>
    <div class="panel-body">
        <table style="width:500px;">
            @using (Html.BeginForm("SaveRoleAssignToUsers", "Role", FormMethod.Post))
            {
                <tr>
                    <td>@Html.Hidden("Id")</td>
                </tr>


                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.HiddenFor(model => item.UserId, new { Name = "UserId" })@Html.DisplayFor(model => item.UserName)</td>
                        <td> @Html.DropDownList("Roles", (IEnumerable<SelectListItem>)ViewBag.ExRoles, new { @class = "form-control" })</td>
                    </tr>
                }
                <tr>
                    <td colspan="3"><br /><br /><br /></td>
                </tr>
                <tr>
                    <td colspan="3" class="text-center"><input type="submit" value="Assign Role" class="btn btn-sm btn-success" /></td>
                </tr>


            }

        </table>

    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>